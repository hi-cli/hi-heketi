source "${HI_CLI_HOME}/bin/colors"
#source "${HI_CLI_HOME}/bin/clap"
source "${HI_CLI_HOME}/bin/logging"
source "${HI_CLI_HOME}/bin/utils"
###############################################################################

function run() {
  log_debug "CMD_LINE: ${CMD_LINE}"
  log_debug "size: ${size}"
  if [ "${size}" == "" ];
  then
    # usage
    log_warn "please specify size"
    exit
  fi

  if [ "${pv}" == "pv" ]; 
  then
    log_debug "create pv"
    create_pv
  fi

  if [ "${pvc}" == "pvc" ] && [ "${name}" != "" ]; 
  then
    log_debug "create pvc"
    create_pvc
  fi

  result=$?

  eval  $1="\${result}"
  eval  $2="\${cli}"
}

###############################################################################




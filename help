source "${HI_CLI_HOME}/bin/colors"
#source "${HI_CLI_HOME}/bin/clap"
source "${HI_CLI_HOME}/bin/logging"
source "${module_dir}/usage"
###############################################################################
function run() {
  cli="heketi-cli help"

  #heketi-cli help
  show_usage

  result=$?

  eval $1=\${result}
  eval $2=\${cli}
}

